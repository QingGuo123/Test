html(ng-app="ESN" )
head
    title login
    script(src='https://code.jquery.com/jquery-2.1.3.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js')
    link(rel="stylesheet", href="/stylesheets/index.css")
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
    link(rel="stylesheet", href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    link(rel="stylesheet", href="/bootstrap/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/bootstrap-material-design/dist/css/bootstrap-material-design.min.css")
    link(rel="stylesheet", href="/bootstrap-material-design/dist/css/ripples.min.css")
    link(rel="stylesheet", href="/material-design-icons/iconfont/material-icons.css")
    link(rel="stylesheet", href="/bootstrap-social/bootstrap-social.css")
    link(rel="stylesheet", href="/font-awesome/css/font-awesome.min.css")
    link(rel="icon" type="image/icon" href="/favicon.ico")
    link(href='http://fonts.googleapis.com/css?family=Russo+One' rel='stylesheet')


body(ng-controller="homePageController")
    div.container
        div.jumbotron
            p#loginTitle Emergency Social Network
            p#loginInstruction pick your username, choose a password and login!
    div.container
        div.row.center_div
            div.col-sm-10.col-md-6.col-lg-5
                form#loginForm.form-horizontal(name="loginForm")
                    div.form-group.has-feedback.has-feedback-right
                        //label.control-lable Username
                        div.input-group
                            span.input-group-addon
                                i.glyphicon.glyphicon-user
                            input#username.usernameL.form-control(name="username", placeholder="  Enter your username", type="text", ng-model="username", ng-focus="usernameFocus()", ng-blur="usernameBlur()",autocomplete="off")
                        div.input-group
                            span.input-group-addon
                                i.glyphicon.glyphicon-lock
                            input#chatroom.form-control(name="password", placeholder="  Enter your password", type="password", ng-model="password", ng-focus="passwordFocus()", ng-blur="passwordBlur()")
                            p {{judge()}}
                        //div#loginHint(nsg-model="judge")
                        //    p {{judge()}}
                div#loginBtn
                    input#enterLandingPage.btn.btn-info.btn-lg.btn-raised(value="Enter Landing Page", type="submit", ng-disabled="logindisable=passworddisable || userdisable" ng-click="login_or_signup()")
                    p {{message}}


